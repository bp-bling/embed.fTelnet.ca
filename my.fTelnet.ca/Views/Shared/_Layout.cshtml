<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>@ViewBag.Title</title>

    @Styles.Render("~/bundles/css")
    <link href="~/HtmlTerm/VirtualKeyboard-720.css" rel="stylesheet" id="VK_CSS">
    <script type="text/javascript">
        var VK_CSS_Url = '@Url.Content("~/HtmlTerm/VirtualKeyboard-{size}.css")';
    </script>
</head>
<body>
    <!-- Fixed navbar -->
    <div class="navbar navbar-inverse navbar-fixed-top" role="navigation">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="#">My fTelnet</a>
            </div>
            <div class="collapse navbar-collapse">
                <ul class="nav navbar-nav">
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">File <b class="caret"></b></a>
                        <ul class="dropdown-menu">
                            <li><a href="#" onclick="Connect();">Connect</a></li>
                            <li><a href="#" onclick="Disconnect();">Disconnect</a></li>
                            <li class="divider" id="liBeforeRecent"></li>
                            <li class="recent-connection"><a href="ConnectToRecent(0);">1: Recent A</a></li> @*TODO For testing only*@
                            <li class="recent-connection"><a href="ConnectToRecent(1);">2: Recent B</a></li>
                            <li class="recent-connection"><a href="ConnectToRecent(2);">3: Recent C</a></li>
                            <li class="recent-connection"><a href="ConnectToRecent(3);">4: Recent D</a></li>
                            <li class="recent-connection"><a href="ConnectToRecent(4);">5: Recent E</a></li>
                            <li class="divider"></li>
                            <li><a href="#" onclick="Exit();">Exit</a></li>
                        </ul>
                    </li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">Quick Connect <span class="caret"></span></a>
                        <ul class="dropdown-menu" style="padding: 15px; min-width: 275px;">
                            <li>
                                <div class="row">
                                    <div class="col-xs-12">
                                        <form>
                                            <div class="form-group">
                                                <input id="txtHostname" type="text" class="form-control" placeholder="Hostname" />
                                            </div>
                                            <div class="form-group">
                                                <input id="txtPort" type="text" class="form-control" placeholder="Port" />
                                            </div>
                                            <div class="form-group">
                                                <input id="chkProxy" type="checkbox" value="1" /> Connect via a proxy server (<a href="#" onclick="ProxyPopup();">?</a>)
                                            </div>
                                            <div class="form-group" style="margin-bottom: 0;">
                                                <button class="btn btn-default btn-block" type="button" onclick="Connect();">Connect!</button>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                            </li>
                        </ul>
                    </li>
                    <li><a href="#" onclick="OpenPanel('DialingDirectory');">Dialing Directory</a></li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">Transfer <b class="caret"></b></a>
                        <ul class="dropdown-menu">
                            <li class="dropdown-header">YModem-G transfer</li>
                            <li><a href="#" onclick="Upload();">Upload</a></li>
                            <li><a href="#" onclick="Download();">Download</a></li>
                        </ul>
                    </li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">Help <b class="caret"></b></a>
                        <ul class="dropdown-menu">
                            <li><a href="#" onclick="OpenPanel('Help');">Help</a></li>
                            <li><a href="#" onclick="OpenPanel('FAQ');">F.A.Q.</a></li>
                            <li><a href="#" onclick="OpenPanel('Contact');">Contact</a></li>
                            <li class="divider"></li>
                            <li><a href="#" onclick="OpenPanel('About');">About</a></li>
                        </ul>
                    </li>
                    <li><a href="#" onclick="OpenPanel('Donate');">Donate</a></li>
                </ul>
            </div><!--/.nav-collapse -->
        </div>
    </div>

    <!-- Begin page content -->
    <div class="container">
        @RenderBody()
    </div>

    <div id="footer">
        <div class="container">
            <p class="text-muted">Place sticky footer content here.</p>
        </div>
    </div>

    <script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.0/jquery.min.js"></script>
    <script>window.jQuery || document.write('<script src="/Scripts/jquery-1.11.0.min.js"><\/script>')</script>
    <script src="//netdna.bootstrapcdn.com/bootstrap/3.1.1/js/bootstrap.min.js"></script>
    <script>$.fn.modal || document.write('<script src="/Scripts/bootstrap.min.js"><\/script>')</script>
    @Scripts.Render("~/bundles/scripts")
</body>
</html>
